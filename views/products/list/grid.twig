<div class="product-group">
    <div class="product-group-heading">
        {# {{ urldecode(request('term')) }} #}
        {# {% if products.total %} 
            {{ products.total }}
            {{ (str_plural('shop::app.search.found-result', products.total)) }}
        {% endif %} #}
    </div>

    <div class="product-group-divider"></div>
    {% if sorter == true %}
        <div class="product-group-arrows">
            {% include 'products/list/sorter.twig' %}
        </div>
    {% endif %}
</div>
<div id="load_data" class="product-grid-4">
    {% if(not products)  %} 
        <div class="product-list empty">
            <h2>{{ ('shop::app.products.whoops'|trans) }}</h2>
            <p>{{ ('shop::app.search.no-results'|trans) }}</p>
        </div>
    {% else %}
        {% for product in products %}
            {% include 'products/list/card.twig' with {'product': product.product} %}
        {% endfor %}
    {% endif %}
</div>
